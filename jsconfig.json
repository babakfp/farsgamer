{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$layouts": ["src/lib/layouts"],
			"$layouts/*": ["src/lib/layouts/*"],
			"$store": ["src/store"],
			"$store/*": ["src/store/*"],
			"$utils": ["src/utils"],
			"$utils/*": ["src/utils/*"],
			"$db": ["src/store/db"],
			"$db/*": ["src/store/db/*"],
			"Accordion": ["src/lib/Accordion/index.js"],
			"Accordion/*": ["src/lib/Accordion/*"]
		}
	},
	"extends": "./.svelte-kit/tsconfig.json",
	"include": ["src/**/*.js", "src/**/*.svelte"]
}
