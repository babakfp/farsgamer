@layer components {
	.table-wrapper {
		@apply overflow-y-hidden scrollbar scrollbar-x-spacing-lg;
	}

	table {
		@apply w-full whitespace-nowrap;
	}

	thead {
		@apply text-sm text-gray-400;
	}

	th {
		@apply mb-4 py-2 px-4 whitespace-nowrap;
	}

	th {
		@apply font-bold;
	}

	td {
		@apply py-2 px-3 border-gray-200 text-right;
	}

	th,
	td {
		@apply text-right;
	}

	tbody tr:not(.h-2, .last:h-0) {
		@apply border-collapse border-b border-gray-200 last:border-b-0;
	}
}
